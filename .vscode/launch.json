  "version": "0.2.0",
  "configurations": [
    {
      "name": "----------------- deepstream-python-apps -----------------",
    },
    {
      //
      // Python: Current File
      //
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "args": [
        "/mnt/ripper-data/Videos/ev-blackstars-ps/stiched.mp4",
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${fileDirname}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/apps",
        // "LD_LIBRARY_PATH": "/home/colivier/mambaforge/envs/ubuntu/lib:/home/colivier/mambaforge/envs/ubuntu/lib/x86_64-linux-gnu:/opt/nvidia/deepstream/deepstream/lib",
